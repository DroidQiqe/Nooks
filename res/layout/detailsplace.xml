                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="0.0dip"
                       android:paddingLeft="10.0dip"
                      android:paddingRight="10.0dip"
                       android:paddingBottom="5.0dip"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/textView3"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Martes:"
                          android:textSize="14sp"
                          android:textAppearance="?android:attr/textAppearanceMedium" />

                      <TextView
                          android:id="@+id/textView4"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:layout_marginLeft="20dp"
                          android:text="8-16 hrs"
                          android:textAppearance="?android:attr/textAppearanceSmall" />
                      
                      
                  </LinearLayout>
                  <LinearLayout 
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="0.0dip"
                       android:paddingLeft="10.0dip"
                      android:paddingRight="10.0dip"
                       android:paddingBottom="5.0dip"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/textView5"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Miercoles:"
                          android:textSize="14sp"
                          android:textAppearance="?android:attr/textAppearanceMedium" />

                      <TextView
                          android:id="@+id/textView6"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:layout_marginLeft="6.0dip"
                          android:text="8-16 hrs"
                          android:textAppearance="?android:attr/textAppearanceSmall" />
                      
                      
                  </LinearLayout>
                
                  <LinearLayout 
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="0.0dip"
                       android:paddingLeft="10.0dip"
                      android:paddingRight="10.0dip"
                       android:paddingBottom="5.0dip"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/textView7"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Jueves:"
                          android:textSize="14sp"
                          android:textAppearance="?android:attr/textAppearanceMedium" />

                      <TextView
                          android:id="@+id/textView8"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:layout_marginLeft="20dp"
                          android:text="8-16 hrs"
                          android:textAppearance="?android:attr/textAppearanceSmall" />
                      
                      
                  </LinearLayout>
                
               <LinearLayout 
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="0.0dip"
                       android:paddingLeft="10.0dip"
                      android:paddingRight="10.0dip"
                       android:paddingBottom="5.0dip"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/textView9"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Viernes:"
                          android:textSize="14sp"
                          android:textAppearance="?android:attr/textAppearanceMedium" />

                      <TextView
                          android:id="@+id/textView10"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:layout_marginLeft="20dp"
                          android:text="8-16 hrs"
                          android:textAppearance="?android:attr/textAppearanceSmall" />
                      
                      
                  </LinearLayout>
                  <LinearLayout 
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="0.0dip"
                       android:paddingLeft="10.0dip"
                      android:paddingRight="10.0dip"
                       android:paddingBottom="5.0dip"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/textView11"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Sábado:"
                          android:textSize="14sp"
                          android:textAppearance="?android:attr/textAppearanceMedium" />

                      <TextView
                          android:id="@+id/textView12"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:layout_marginLeft="18dp"
                          android:text="9-20 hrs"
                          android:textAppearance="?android:attr/textAppearanceSmall" />
                      
                      
                  </LinearLayout>
                  <LinearLayout 
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="0.0dip"
                       android:paddingLeft="10.0dip"
                      android:paddingRight="10.0dip"
                       android:paddingBottom="5.0dip"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/textView13"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Domingo:"
                          android:textSize="14sp"
                          android:textAppearance="?android:attr/textAppearanceMedium" />

                      <TextView
                          android:id="@+id/textView14"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:layout_marginLeft="13dp"
                          android:text="Cerrado"
                          android:textAppearance="?android:attr/textAppearanceSmall" />
                      
                      
                  </LinearLayout>
                
           
             </LinearLayout>
                
            </LinearLayout>
            
            
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                 android:layout_marginRight="10.0dip"
                android:layout_marginLeft="0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                 
                 
                 
                 android:background="#ffff">

                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                     <RatingBar
                         android:id="@+id/ratingBar1"
                         style="?android:attr/ratingBarStyleIndicator"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:numStars="3"
                         android:layout_marginTop="10.0dp"
                         android:layout_marginLeft="6.0dip"
                         android:rating="3"
                           android:isIndicator="true"
                         android:stepSize="1.0" />

                </LinearLayout>

               

                <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="1.0dip"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="6.0dip"
                android:background="#ffeeeeee" />
                 <ImageView
                    android:id="@+id/imageView1"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="6.0dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:src="@drawable/logo_small" />
                 
                   <View
                android:id="@+id/viewx"
                android:layout_width="wrap_content"
                android:layout_height="1.0dip"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="6.0dip"
                android:background="#ffeeeeee" />
                   
                   <LinearLayout 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:padding="10dip"
                     >
                      <TextView
                    android:id="@+id/tvfot"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffff"
                    android:text="Fotos:"
                    android:textSize="16sp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/text_blue" />
                      <Gallery 
                          android:layout_marginTop="10dp"
                          android:id="@+id/mGaleria"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          />
                     
                 </LinearLayout>
                
            </LinearLayout>
            
        </LinearLayout>
        
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10.0dip"
            android:layout_margin="10.0dp"
            android:background="@drawable/paddingmyview"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10.0dip" >

                <TextView
                    android:id="@+id/tvre"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffff"
                    android:text="Reseñas"
                    android:textSize="16sp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/text_blue" />
                
            </LinearLayout>
             <View
                android:id="@+id/vier"
                android:layout_width="wrap_content"
                android:layout_height="1.0dip"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="6.0dip"
                android:background="#ffeeeeee" />
             
             
             <TextView 
                 android:id="@+id/Resenia"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="6.0dp"
                 android:layout_marginRight="6.0dp"
                 android:textSize="14sp"
                 android:text="' El lugar es excelente, muy buen servicio y sobre todo familiar '"
                 android:typeface="sans"
                 android:textColor="@color/DarkGray"
                 />
            
        </LinearLayout>
        
        
    </LinearLayout>
    
    
    
</ScrollView>